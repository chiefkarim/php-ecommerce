{
    "name": "scandiweb/chiefkarim-api",
    "description": "Scandiweb test backend API",
    "type": "project",
    "require": {
        "ext-pdo": "*",
        "nikic/fast-route": "^1.3",
        "webonyx/graphql-php": "^15.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "migrate": "php bin/migrate.php",
        "test": "phpunit",
        "seed": "php bin/seed.php"
    },
    "config": {
        "sort-packages": true
    }
}
